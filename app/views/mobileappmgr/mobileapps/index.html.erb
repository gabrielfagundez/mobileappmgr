<%= stylesheet_link_tag "mobileappmgr" %>
<div class="padding">
<table class="regular">
  <tr>
    <th>Platform</th>
    <th>Version</th>
    <th>Uploaded</th>
    <th>&nbsp;</th>
  </tr>

<% @mobileapps.each do |mobileapp| %>
  <tr>
    <td><%= mobileapp['platform']%></td>
    <td><%= mobileapp['version'] %></td>
    <td><%= formatted_uploaded_date(mobileapp) %></td>
    <td><a href="<%= mobileapp['install'] %>">Install</a></td>
  </tr>
<% end %>
</table>

<br />
  <% unless Rails.env.production? %>
      <% if params[:preview] == 'production' %>
          <p>To return to the <%= Rails.env.upcase %> view, click <a href="/mobileapps">here</a>.</p>
      <% else %>
          <p>For a preview of what the user will see in production, click <a href="/mobileapps?preview=production">here</a>.</p>
      <% end %>
  <% end %>
</div>
